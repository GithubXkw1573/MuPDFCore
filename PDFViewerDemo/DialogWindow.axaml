<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="450" Height="100"
        x:Class="PDFViewerDemo.DialogWindow"
        Title="Message" FontSize="16" WindowStartupLocation="CenterOwner">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
		</Grid.RowDefinitions>

		<TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Name="MessageContainer" TextAlignment="Center" />
		<Button Width="100" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="OKButtonClicked">OK</Button>
	</Grid>
</Window>
